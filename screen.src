'$include:'bhtdef.inc'
'$include:'const.inc'
'$include:'screen.def'

'--------------------------------------------------------------------------
' init
'--------------------------------------------------------------------------
  sub Screen.Init
    power 180               ' auto power ON
    out .pnBLCtrl, .pvBLOn  ' backlight ON for 5 seconds
    out .pnBLTime, 5
    out .pnSysSts, .pvStsOn ' show system status
    out .pnARKey,0          ' auto key repeat OFF
    out .pnMgLng, .pvChinese ' Chinese message

    screen Lc.SCR.KANJI,Lc.WAT.NORMAL
    cls
  end sub

'--------------------------------------------------------------------------
' footer
'--------------------------------------------------------------------------
  sub Screen.Footer
    '-- version
    private v$: v$=APP.VERSION$
    if v$="" then
      v$="unknown"
    end if
    private prefix$:prefix$="v"

    screen Lc.SCR.ANK,Lc.WAT.NORMAL

    locate 1,20
    private i%
    private cnt%:cnt%=20-len(prefix$+v$)

    for i%=1 to cnt%
      print " ";
    next
    print prefix$+v$;

    locate 1,20
    private e%: e%=APP.ELAPSEDTIME%
    if e%<>0 then
      print APP.DEBUGMSG$;
      print "-";
      print mid$(str$(e%),2);
      print "s";
    end if

    screen Lc.SCR.KANJI,Lc.WAT.NORMAL
  end sub

'--------------------------------------------------------------------------
' footer Y/N
'--------------------------------------------------------------------------
  sub Screen.FooterYesNo
    locate 1,19
'----------1234567890123456-------
    print "[M1]是    [M2]否";
    Screen.Footer
  end sub

'--------------------------------------------------------------------------
' footer "hit any key"
'--------------------------------------------------------------------------
  sub Screen.FooterInputOK
    locate 1,19
'-------------1234567890123456-------
    '--print "...请按任意键。";
  end sub

'--------------------------------------------------------------------------
' select item header
'--------------------------------------------------------------------------
  sub Screen.HeaderUDLR(canUp%,canDown%)
    locate 1,1
    print "[";
    if canUp%=1 then
      print "▲";
    else
      print "  ";
    end if
    if canDown%=1 then
      print "";
    else
      print "  ";
    end if
    print "]选 [ENT]确"
  end sub
  
'--------------------------------------------------------------------------
' Field display
'--------------------------------------------------------------------------
 sub Screen.Field(label$, value$, type%)
 	print using "&              &" label
 	print using "[&            &]" value	
 end sub
